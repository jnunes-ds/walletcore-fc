generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma-client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  products  Product[]  @relation("SellerProducts")
  purchases Purchase[] @relation("BuyerPurchases")
  sales     Purchase[] @relation("SellerSales")
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  price       Float
  description String?
  sellerId    Int
  seller      User       @relation("SellerProducts", fields: [sellerId], references: [id], onDelete: Cascade)
  purchases   Purchase[]

  @@index([sellerId])
}

model Purchase {
  id       Int       @id @default(autoincrement())
  buyerId  Int
  buyer    User      @relation("BuyerPurchases", fields: [buyerId], references: [id], onDelete: Restrict)
  sellerId Int
  seller   User      @relation("SellerSales", fields: [sellerId], references: [id], onDelete: Restrict)
  products Product[]

  @@index([buyerId])
  @@index([sellerId])
}
